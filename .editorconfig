root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.yml, *.yaml]
indent_style = space
indent_size = 2

[*.js, *.ts]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.css, *.scss]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false